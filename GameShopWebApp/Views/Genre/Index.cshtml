<div class="container">
    
    @if(TempData["success"] != null) {
        <h2 class="">TempData["success"]</h2>
    }
    
    <div class="row pt-4 mb-4">
        <div class="col-6">
            <h2 class="text-primary">Game Genres</h2>
        </div>
        <div class="text-end col-6">
            <!-- button to trigger modal -->
            <a class="btn btn-primary" asp-controller="Genre" asp-action="Create"> <i class="bi bi-plus-circle me-2"></i> Add New Genre</a>
        </div>
    </div>

    <table class="table table-secondary table-bordered table-striped">
        <thead>
            <tr class="table-dark">
                <th scope="col" class="text-center">#</th>
                <th scope="col">Game Genres</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
                @{int number = 1;}

                @foreach(var item in Model)
                {
                    <tr>
                        <th scope="row" class="text-center">@number</th>
                        <td>@item.Name</td>
                        <td><a asp-controller="Genre" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary form-control rounded">Edit <i class="bi bi-pencil-square"></i></a></td>
                        <td><a asp-controller="Genre" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger form-control rounded">Delete <i class="bi bi-x-circle"></i></a></td>
                    </tr>

                    number++;
                }
        </tbody>
    </table>
</div>
